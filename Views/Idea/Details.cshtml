@model EnterpriseWeb.Models.Idea

@{
    ViewData["Title"] = "Details";
    var totalViews = Model.Viewings.GroupBy(v => v.IdeaId).Sum(g => g.Sum(v => v.Count));
    var ratingUp = Model.Ratings.GroupBy(v => v.IdeaID).Sum(g => g.Sum(v => v.RatingUp));
    var ratingDown = Model.Ratings.GroupBy(v => v.IdeaID).Sum(g => g.Sum(v => v.RatingDown));

}

<h1>Details</h1>

<div style="margin:auto; width:70%">
    <h4>Idea</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmissionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmissionDate)
        </dd>
        <dt class="col-sm-2">
            View
        </dt>
        <dd class="col-sm-10">
            @totalViews
        </dd>
        <dt class="col-sm-2">
            Thumb up
        </dt>
        <dd class="col-sm-10">
            @ratingUp
        </dd>
        <dt class="col-sm-2">
            Thumb down
        </dt>
        <dd class="col-sm-10">
            @ratingDown
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupportingDocuments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupportingDocuments)
            <form method="post" action="@Url.Action("Download", "Idea")">
                <input type="hidden" name="fileName" value="@Model.SupportingDocuments" />
                <input type="hidden" name="dataFile" value="@System.Convert.ToBase64String(Model.DataFile)"/>
                <button type="submit">Download</button>
            </form>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClosureDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClosureDate.FinalDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.Comments)
            {
                <strong>
                    @if (item.status == 1)
                    {
                        @item.IdeaUser?.Name
                        ;
                    }
                    else
                    {
                        <text>Anonymous</text>
                    }:
                </strong>

                @Html.DisplayFor(modelItem => item.CommentText)
                ;
                <br>
            }
        </dd>
    </dl>
    <div class="col-md-4">
        
    
        @if (Model.ClosureDate != null && Model.ClosureDate.ClousureDate > DateTime.Now)
        {
            <a class="far fa-thumbs-up btn btn-light" asp-action="DetailRating" asp-route-id="@Model.Id" asp-route-isUp="true">Up</a>
            <text>|</text>
            <a class="far fa-thumbs-down btn btn-light" asp-action="DetailRating" asp-route-id="@Model.Id" asp-route-isUp="false">Down</a>
        }
        else
        {
            <div class="alert alert-danger">
                The closure date has passed.
            </div>
        }
        <br>
        <form asp-action="Comment" asp-route-id="@Model.Id">
            <input class="form-control" name="commenttext" placeholder="Comment" />
            <input type="submit" value="Comment" class="btn btn-primary" />
            <select name="incognito">
                <option value="no">Public</option>
                <option value="yes">Incognito Comment</option>
            </select>
        </form>

        <br>
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>  
    </div>    
</div>



<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

